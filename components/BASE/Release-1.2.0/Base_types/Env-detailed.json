{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://specifications.openehr.org/releases/ITS-JSON/latest/components/BASE/Release-1.2.0/Base_types/Env-detailed.json",
    "title": "Env",
    "description": "Class representing the real-world environment, providing basic information like current time, date, etc.",
    "$comments": "Defined in Base_types IM",
    "$functions": {
        "current_date": {
            "description": "Return today's date in the current locale.",
            "return": {
                "$ref": "https://specifications.openehr.org/releases/ITS-JSON/latest/components/BASE/Release-1.2.0/Foundation_types/all-detailed.json#/definitions/Iso8601_date"
            }
        },
        "current_time": {
            "description": "Return current time in the current locale.",
            "return": {
                "$ref": "https://specifications.openehr.org/releases/ITS-JSON/latest/components/BASE/Release-1.2.0/Foundation_types/all-detailed.json#/definitions/Iso8601_time"
            }
        },
        "current_date_time": {
            "description": "Return current date/time in the current locale.",
            "return": {
                "$ref": "https://specifications.openehr.org/releases/ITS-JSON/latest/components/BASE/Release-1.2.0/Foundation_types/all-detailed.json#/definitions/Iso8601_date_time"
            }
        },
        "current_time_zone": {
            "description": "Return the timezone of the current locale.",
            "return": {
                "$ref": "https://specifications.openehr.org/releases/ITS-JSON/latest/components/BASE/Release-1.2.0/Foundation_types/all-detailed.json#/definitions/Iso8601_timezone"
            }
        }
    }
}